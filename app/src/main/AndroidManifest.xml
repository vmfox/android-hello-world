<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sqisland.android.hello">

    <application
        android:allowBackup="true"
        android:label="@string/d_log_in">

        <!-- log_in activity -->
        <activity
            android:name=".Activity_log_in"
            android:label="@string/d_log_in">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- register activity -->
        <activity
            android:name=".Activity_register"
            android:label="@string/d_register">

            <!-- android:parentActivityName=".Activity_log_in"> &lt;!&ndash;allows to return back to the specified screen&ndash;&gt; -->
        </activity>

        <!-- main view activity -->
        <activity
            android:name=".Activity_main_view"
            android:label="@string/d_main_view"></activity>

        <!-- view item list -->
        <activity
            android:name=".ListItem"
            android:label="@string/d_list_view">
        </activity>
        
    </application>

</manifest>
